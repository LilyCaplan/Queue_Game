<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.queue_game.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/enqueue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enqueue"
        android:onClick="enqueue"
        android:layout_marginStart="69dp"
        app:layout_constraintRight_toLeftOf="@+id/q3"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="71dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="71dp" />

    <Button
        android:id="@+id/dequeue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dequeue"
        android:layout_marginEnd="55dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="55dp" />

    <TextView
        android:id="@+id/q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A"
        android:textSize="20sp"
        android:visibility="visible"
        android:layout_marginStart="56dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/q2"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/B"
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/enqueue"
        app:layout_constraintBaseline_toBaselineOf="@+id/q3"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/q3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/C"
        android:textSize="20sp"
        app:layout_constraintRight_toLeftOf="@+id/dequeue"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/dequeue"
        android:layout_marginBottom="63dp" />

    <TextView
        android:id="@+id/q4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/D"
        android:textSize="20sp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="55dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/q3"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="55dp" />

    <TextView
        android:id="@+id/randomLetter"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:text="@string/randomChar"
        android:gravity="center"
        android:background="@drawable/back"
        app:layout_constraintRight_toLeftOf="@+id/q4"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="101dp"
        android:layout_marginTop="188dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/q1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="101dp"
        android:layout_marginRight="101dp"
        app:layout_constraintHorizontal_bias="1.0"
        tools:layout_editor_absoluteX="169dp" />


</android.support.constraint.ConstraintLayout>
